<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    
    <style name="MaterialAppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    
    <style name="MaterialAppTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlActivated">@color/blue</item>
    </style>
    
    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style of ConstraintLayout that contains info about one of these:
         Watch, Star, Fork -->
    <style name="ConstraintLayoutPopularity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cl_popularity_height_size_32</item>
    </style>

    <!-- Style of ImageView "Watch", "Star", "Fork" icons -->
    <style name="ImageViewIcon">
        <item name="android:layout_width">@dimen/icon_size_16</item>
        <item name="android:layout_height">@dimen/icon_size_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <!-- Style of TextView of "Watch", "Star", "Fork" captions -->
    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny_4</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Style for vertical line -->
    <style name="VerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- Style of TextView of "Watch", "Star", "Fork" number -->
    <style name="TextViewNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_8</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="BlackBoldTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/trigger_filter_tint</item>
    </style>

    <style name="BlueCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/trigger_filter_tint</item>
    </style>

    <style name="AccentButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/AccentButtonThemeOverlay</item>
    </style>

    <style name="AccentButtonThemeOverlay">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="PaleButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/PaleButtonThemeOverlay</item>
    </style>

    <style name="PaleButtonThemeOverlay">
        <item name="colorPrimary">@color/pale</item>
    </style>
</resources>